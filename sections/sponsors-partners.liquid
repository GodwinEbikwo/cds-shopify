{% schema %}
{
  "name": "Sponsors/Partners Grid",
  "settings": [
    {
      "type": "image_picker",
      "id": "sponsor_1",
      "label": "Sponsor/Partner Image 1"
    },
    {
      "type": "image_picker",
      "id": "sponsor_2",
      "label": "Sponsor/Partner Image 2"
    },
    {
      "type": "image_picker",
      "id": "sponsor_3",
      "label": "Sponsor/Partner Image 3"
    },
    {
      "type": "image_picker",
      "id": "sponsor_4",
      "label": "Sponsor/Partner Image 4"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#222222"
    }
  ],
  "presets": [
    {
      "name": "Sponsors/Partners Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="sponsors-partners-grid" role="list" aria-label="Sponsors and Partners">
  {% if section.settings.sponsor_1 != blank %}
    <div class="sponsor-partner-item" role="listitem">
      <img
        src="{{ section.settings.sponsor_1 | image_url: width: 400 }}"
        alt="Sponsor or Partner Logo 1"
        loading="lazy"
        width="200"
        height="100"
        class="sponsor-partner-img"
      >
    </div>
  {% endif %}
  {% if section.settings.sponsor_2 != blank %}
    <div class="sponsor-partner-item" role="listitem">
      <img
        src="{{ section.settings.sponsor_2 | image_url: width: 400 }}"
        alt="Sponsor or Partner Logo 2"
        loading="lazy"
        width="200"
        height="100"
        class="sponsor-partner-img"
      >
    </div>
  {% endif %}
  {% if section.settings.sponsor_3 != blank %}
    <div class="sponsor-partner-item" role="listitem">
      <img
        src="{{ section.settings.sponsor_3 | image_url: width: 400 }}"
        alt="Sponsor or Partner Logo 3"
        loading="lazy"
        width="200"
        height="100"
        class="sponsor-partner-img"
      >
    </div>
  {% endif %}
  {% if section.settings.sponsor_4 != blank %}
    <div class="sponsor-partner-item" role="listitem">
      <img
        src="{{ section.settings.sponsor_4 | image_url: width: 400 }}"
        alt="Sponsor or Partner Logo 4"
        loading="lazy"
        width="200"
        height="100"
        class="sponsor-partner-img"
      >
    </div>
  {% endif %}
</div>

<style>
  .sponsors-partners-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
    margin: 0px auto;
    padding: 2rem;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    border-color: rgb(var(--color-accent));
  }
  .sponsor-partner-item {
    flex: 1 1 20%;
    max-width: 200px;
    min-width: 120px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .sponsor-partner-img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
    filter: grayscale(100%);
    transition: filter 0.3s;
  }
  .sponsor-partner-img:hover,
  .sponsor-partner-img:focus {
    filter: grayscale(0%);
  }
  @media (max-width: 768px) {
    .sponsors-partners-grid {
      gap: 1rem;
    }
    .sponsor-partner-item {
      max-width: 120px;
      min-width: 80px;
    }
  }
</style>
